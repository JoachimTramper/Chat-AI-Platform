generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id              String        @id @default(cuid())
  email           String        @unique
  passwordHash    String
  displayName     String        @unique @db.VarChar(32)
  role            Role          @default(USER)
  createdAt       DateTime      @default(now())
  emailVerifiedAt DateTime?
  emailVerificationToken EmailVerificationToken?
  messages        Message[]
  lastSeen        DateTime?
  channels        Channel[]     @relation("ChannelMembers")
  reads           ChannelRead[]
  avatarUrl       String?
  deletedMessages Message[]     @relation("MessageDeletedBy")
  reactions       MessageReaction[]
  mentions        MessageMention[]
}

model Channel {
  id            String                @id @default(cuid())
  name          String
  isDirect      Boolean               @default(false)
  createdAt     DateTime              @default(now())
  messages      Message[]
  members       User[]                @relation("ChannelMembers")
  dmKey         String?               @unique
  reads         ChannelRead[]
  digestSetting ChannelDigestSetting?
}

model MessageAttachment {
  id        String  @id @default(cuid())
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId String

  url      String
  fileName String
  mimeType String
  size     Int

  createdAt DateTime @default(now())

  @@index([messageId])
}

model Message {
  id          String    @id @default(cuid())
  content     String?
  authorId    String
  channelId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  deletedById String?

  author    User    @relation(fields: [authorId], references: [id])
  channel   Channel @relation(fields: [channelId], references: [id])
  deletedBy User?   @relation("MessageDeletedBy", fields: [deletedById], references: [id])

  reactions MessageReaction[]

  parent   Message?  @relation("MessageReplies", fields: [parentId], references: [id])
  parentId String?
  replies  Message[] @relation("MessageReplies")

  mentions MessageMention[]

  attachments MessageAttachment[]

  @@index([channelId, createdAt(sort: Desc)])
  @@index([channelId, deletedAt])
}

model ChannelRead {
  userId    String
  channelId String
  lastRead  DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  channel Channel @relation(fields: [channelId], references: [id])

  @@id([userId, channelId])
  @@index([channelId, lastRead])
}

model MessageReaction {
  id        String   @id @default(cuid())
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  emoji     String
  createdAt DateTime @default(now())

  @@unique([messageId, userId, emoji])
}

model MessageMention {
  id        String  @id @default(cuid())
  message   Message @relation(fields: [messageId], references: [id])
  messageId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String

  @@index([messageId])
  @@index([userId])
}

model ChannelDigestSetting {
  id        String @id @default(cuid())
  channelId String @unique

  enabled   Boolean   @default(false)
  timeHHmm  String    @default("18:00")
  lastRunAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String   @unique
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
}
